@model IEnumerable<Note>
@{
    ViewData["Title"] = "Notes List";
}
<h2>Notes List</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Summary</th>
            <th>CreatedDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var note in Model)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.Content</td>
                <td>@note.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-danger">
                        Delete
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-warning">
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-primary">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>